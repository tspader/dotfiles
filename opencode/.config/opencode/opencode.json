{
  "$schema": "https://opencode.ai/config.json",
  "formatter": {
    "ruff": {
      "command": ["ruff", "format", "$FILE"],
      "extensions": ["*.py"]
    }
  },
  "permission": {
    "edit": "allow",
    "bash": {
      "*": "allow",
      "sudo": "ask",
      "wrangler": "ask",
      "gh": "ask"
    },
    "webfetch": "allow",
    "external_directory": {
      "*": "ask",
      "/tmp/*": "allow"
    }
  },
  "plugin": [
    "opencode-anthropic-auth"
  ]
}
